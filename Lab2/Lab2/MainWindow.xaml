<Window x:Class="Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#FFCBBEBE" BorderThickness="2" CornerRadius="10" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" >

                <Button ToolTip="Відкрити">
                    <Image Source="images/folder.png" Height="47" Width="47"/>
                </Button>

                <Button ToolTip="Стерти">
                    <Image Source="images/broom.png" Height="47" Width="47"/>
                </Button>

                <Button ToolTip="Копіювати">
                    <Image Source="images/copy-two-paper-sheets-interface-symbol.png" Height="47" Width="47"/>
                </Button>

                <Button ToolTip="Вставити">
                    <Image Source="images/paste.png" Height="47" Width="47"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>


</Window>
