<Window x:Class="Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Label Content="Label" DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="5"/>

        <TextBox Text="TextBox" DockPanel.Dock="Left" Margin="10" Height="300" Width="350"/>
        <TextBox Text="TextBox" DockPanel.Dock="Right" Margin="10" Height="300" Width="350"/>
        <Button Content="Button" DockPanel.Dock="Bottom" Width="75" Height="23" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
    </DockPanel>

</Window>
